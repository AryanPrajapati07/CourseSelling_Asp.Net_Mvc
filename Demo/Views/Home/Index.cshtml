@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Teacher/Student Buttons</title>
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            background-color: #f5f5f5;
            margin: 0;
        }

        .container {
            text-align: center;
            max-width: 1200px;
            width: 100%;
            padding: 20px;
        }

        h1 {
            color: #333;
            margin-bottom: 40px;
        }

        .buttons-container {
            display: flex;
            justify-content: center;
            gap: 30px;
            flex-wrap: wrap;
        }

        .role-button {
            display: flex;
            flex-direction: column;
            align-items: center;
            width: 280px;
            padding: 30px 20px;
            border-radius: 10px;
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1);
            transition: all 0.3s ease;
            cursor: pointer;
            text-decoration: none;
            color: white;
            position: relative;
            overflow: hidden;
        }

            .role-button:hover {
                transform: translateY(-5px);
                box-shadow: 0 12px 20px rgba(0, 0, 0, 0.15);
            }

            .role-button:active {
                transform: translateY(0);
                box-shadow: 0 5px 10px rgba(0, 0, 0, 0.1);
            }

            .role-button::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                background: rgba(255, 255, 255, 0.1);
                transform: scaleX(0);
                transform-origin: right;
                transition: transform 0.5s ease;
                z-index: 1;
            }

            .role-button:hover::before {
                transform: scaleX(1);
                transform-origin: left;
            }

            .role-button i {
                font-size: 48px;
                margin-bottom: 15px;
                z-index: 2;
            }

            .role-button .role-title {
                font-size: 24px;
                font-weight: 600;
                margin-bottom: 10px;
                z-index: 2;
            }

            .role-button .role-description {
                font-size: 14px;
                opacity: 0.9;
                z-index: 2;
            }

        .teacher-button {
            background: linear-gradient(135deg, #2193b0, #6dd5ed);
        }

        .student-button {
            background: linear-gradient(135deg, #ff9966, #ff5e62);
        }

        /* For smaller screens */
       (max-width: 768px) {
            .buttons-container

        {
            flex-direction: column;
            align-items: center;
        }

        .role-button {
            width: 90%;
            max-width: 280px;
            margin-bottom: 20px;
        }

        }
    </style>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>
<body>
    <div class="container">
        <h1>Welcome to Learning Management System</h1>
        <div class="buttons-container">
            <a href="@Url.Action("AddCourse", "Students")" class="role-button teacher-button">
                <i class="fas fa-chalkboard-teacher"></i>
                <div class="role-title">Admin</div>
                <div class="role-description">Access your classroom, manage courses, and track student progress</div>
            </a>
            <a href="@Url.Action("StudentLogin", "Students")" class="role-button student-button">
                <i class="fas fa-user-graduate"></i>
                <div class="role-title">Student</div>
                <div class="role-description">Access your courses, assignments, and learning materials</div>
            </a>
        </div>
    </div>
</body>
</html>
