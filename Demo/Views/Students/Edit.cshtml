            @*     <label class="col-sm-4 col-form-label">Country</label> *@
            @*     <div class="col-sm-8"> *@
            @*         <select class="form-select" asp-for="Country" asp-items="Model.Countries" id="countryDropdown"> *@
            @*             <option value="">Select Country</option> *@
            @*         </select> *@
            @*         <span asp-validation-for="Country" class="text-danger"></span> *@
            @*     </div> *@
            @* </div> *@

            @* <div class="row mb-3"> *@
            @*     <label class="col-sm-4 col-form-label">State</label> *@
            @*     <div class="col-sm-8"> *@
            @*         <select class="form-select" asp-for="State" id="stateDropdown"> *@
            @*             <option value="">Select State</option> *@
            @*         </select> *@
            @*         <span asp-validation-for="State" class="text-danger"></span> *@
            @*     </div> *@
            @* </div> *@

    <button type="submit" class="btn btn-primary">Save Changes</button>
    <a href="@Url.Action("Index", "Students")" class="btn btn-secondary">Cancel</a>

    </div>
    </div>
</form>

