@model Demo.Models.Student

<div class="container mt-5">
    <div class="card shadow-lg rounded-4">
        <div class="card-header text-white bg-primary text-center rounded-top-4">
            <h2 class="mb-0">Update Student Details</h2>
        </div>
        <div class="card-body px-5 py-4">

            @if (!string.IsNullOrEmpty(Model.ImageFileName))
            {
                <div class="text-center mb-4">
                    <img src="@Model.ImageFileName" alt="Student Image" class="img-thumbnail" style="max-width: 150px; max-height: 150px;" hidden />
                </div>
            }

            <form asp-action="Edit" method="post">
                @Html.AntiForgeryToken()

                <div class="mb-3 row">
                    <label class="col-sm-4 col-form-label">Name</label>
                    <div class="col-sm-8">
                        <input class="form-control" asp-for="Name" placeholder="Enter full name" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>

                <div class="mb-3 row">
                    <label class="col-sm-4 col-form-label">Email</label>
                    <div class="col-sm-8">
                        <input class="form-control" asp-for="Email" placeholder="example@email.com" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>

                <div class="mb-3 row">
                    <label class="col-sm-4 col-form-label">Gender</label>
                    <div class="col-sm-8">
                        <select class="form-select" asp-for="Gender">
                            <option value="">Select Gender</option>
                            <option value="Male">Male</option>
                            <option value="Female">Female</option>
                        </select>
                        <span asp-validation-for="Gender" class="text-danger"></span>
                    </div>
                </div>

                <div class="mb-3 row">
                    <label class="col-sm-4 col-form-label">Date of Joining</label>
                    <div class="col-sm-8">
                        <input type="date" class="form-control" asp-for="Dob" />
                        <span asp-validation-for="Dob" class="text-danger"></span>
                    </div>
                </div>

                <div class="mb-4 row">
                    <label class="col-sm-4 col-form-label">Age</label>
                    <div class="col-sm-8">
                        <input class="form-control" asp-for="Age" placeholder="Enter age" />
                        <span asp-validation-for="Age" class="text-danger"></span>
                    </div>
                </div>

                <div class="text-center">
                    <button type="submit" class="btn btn-success me-2 px-4">Save Changes</button>
                    <a href="@Url.Action("Index", "Students")" class="btn btn-secondary px-4">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>
