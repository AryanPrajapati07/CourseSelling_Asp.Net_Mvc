@model Demo.Models.Course

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Course Details - @Model.CourseTitle</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <style>
        * {
            box-sizing: border-box;
            margin: 0;
            padding: 0;
        }

        body {
            font-family: 'Segoe UI', sans-serif;
            background: linear-gradient(to bottom right, #eef2ff, #f8fafc);
            color: #1f2937;
        }

        .container {
            max-width: 1100px;
            margin: 40px auto;
            padding: 30px;
            background: #fff;
            border-radius: 12px;
            box-shadow: 0 12px 40px rgba(0, 0, 0, 0.08);
            position: relative;
        }

        h1 {
            font-size: 2.4rem;
            margin-bottom: 10px;
            color: #1e3a8a;
        }

        .subtitle {
            font-size: 1.1rem;
            color: #6366f1;
            margin-bottom: 25px;
        }

        .media-top {
            display: flex;
            flex-wrap: wrap;
            gap: 30px;
            margin-bottom: 30px;
        }

        .media-item {
            flex: 1 1 45%;
            text-align: center;
        }

            .media-item img,
            .media-item video {
                max-width: 100%;
                border-radius: 10px;
                margin-top: 12px;
                box-shadow: 0 6px 20px rgba(0, 0, 0, 0.1);
                transition: transform 0.3s ease, box-shadow 0.3s ease;
            }

                .media-item img:hover,
                .media-item video:hover {
                    transform: scale(1.02);
                    box-shadow: 0 10px 24px rgba(99, 102, 241, 0.25);
                }

        .details {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 20px 40px;
            margin-bottom: 30px;
        }

            .details label {
                font-weight: 600;
                display: block;
                margin-bottom: 4px;
                color: #374151;
            }

        .value {
            font-size: 1rem;
            color: #4b5563;
        }

        .section-title {
            font-size: 1.25rem;
            margin: 30px 0 10px;
            border-left: 5px solid #6366f1;
            padding-left: 12px;
            color: #1e40af;
        }

        .info-box {
            background: #f1f5f9;
            padding: 16px 20px;
            border-radius: 8px;
            font-size: 1rem;
            line-height: 1.6;
            color: #1f2937;
        }

        .enroll-button {
            display: inline-block;
            background: linear-gradient(135deg, #4f46e5, #3b82f6);
            color: #fff;
            padding: 14px 28px;
            margin-bottom:-5%;
            font-size: 1.1rem;
            font-weight: 600;
            border: none;
            border-radius: 50px;
            box-shadow: 0 6px 20px rgba(59, 130, 246, 0.25);
            text-decoration: none;
            position: absolute;
            bottom: 20px;
            right: 30px;
            transition: background 0.3s ease, transform 0.2s ease;
        }

            .enroll-button:hover {
                background: linear-gradient(135deg, #4338ca, #2563eb);
                color:black;
                transform: scale(1.03);
            }

        media (max-width: 900px) {
            .media-top

        {
            flex-direction: column;
        }

        .details {
            grid-template-columns: 1fr;
        }

        .enroll-button {
            
            position: static;
            display: block;
            margin: 30px auto 0 auto;
            text-align: center;
        }

        }

        media (max-width: 600px) {
            .container

        {
            padding: 20px;
            margin: 20px;
        }

        h1 {
            font-size: 1.8rem;
        }

        .subtitle {
            font-size: 1rem;
        }

        }
    </style>
</head>
<body>
    <div class="container">
        <div class="media-top">
            @if (!string.IsNullOrEmpty(Model.ImagePath))
            {
                <div class="media-item">
                    <div class="section-title">Course Image</div>
                    <img src="@Url.Content($"~{Model.ImagePath}")" alt="Course Image" />
                </div>
            }

            @if (!string.IsNullOrEmpty(Model.VideoPath))
            {
                <div class="media-item">
                    <div class="section-title">Course Preview Video</div>
                    <video controls>
                        <source src="@Url.Content($"~{Model.VideoPath}")" type="video/mp4" />
                        Your browser does not support the video tag.
                    </video>
                </div>
            }
        </div>

        <h1>@Model.CourseTitle</h1>
        <div class="subtitle">@Model.Category &bull; @Model.Level</div>

        <div class="details">
            <div>
                <label>Instructor</label>
                <div class="value">@Model.Instructor</div>
            </div>
            <div>
                <label>Duration</label>
                <div class="value">@Model.Hours hours</div>
            </div>
        </div>

        <div class="section-title">Description</div>
        <div class="info-box">@Model.Description</div>

        <div class="section-title">Requirements</div>
        <div class="info-box">@Model.Requirements</div>

        <div class="section-title">What You Will Learn</div>
        <div class="info-box">@Model.WhatLearn</div>

        @* <a href="#" class="enroll-button">Enroll Now for ₹@Model.Price</a> *@

        <button id="enrollBtn" class="enroll-button" type="button">
            Enroll Now for ₹@Model.Price
        </button>


        @* RAZORPAY_KEY = 'rzp_test_kLX7L8BYDbH8a2' *@
        @* RAZORPAY_SECRET = 'bqFMooSdJGjmiE7JagpU9YZS' *@


    </div>
</body>
</html>
