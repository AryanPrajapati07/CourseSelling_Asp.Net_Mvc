@model Demo.Models.Course


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Course Details - @Model.CourseTitle</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <style>
        * {
            box-sizing: border-box;
            margin: 0;
            padding: 0;
        }

        body {
            font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
            background:white;
            min-height: 100vh;
            color: #1a202c; 
            line-height: 1.6;
        }

        .hero-section {
            margin-top:30px;
            background: white;
            padding: 60px 0;
            position: relative;
            overflow: hidden;
        }

            .hero-section::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                right: 0;
                bottom: 0;
                background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><defs><pattern id="grain" width="100" height="100" patternUnits="userSpaceOnUse"><circle cx="25" cy="25" r="1" fill="rgba(255,255,255,0.1)"/><circle cx="75" cy="75" r="1" fill="rgba(255,255,255,0.1)"/><circle cx="50" cy="10" r="0.5" fill="rgba(255,255,255,0.05)"/></pattern></defs><rect width="100" height="100" fill="url(%23grain)"/></svg>');
                opacity: 0.3;
            }

        .hero-content {
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 30px;
            position: relative;
            z-index: 1;
        }

        .breadcrumb {
            color: rgba(255, 255, 255, 0.8);
            margin-bottom: 20px;
            font-size: 0.9rem;
        }

            .breadcrumb a {
                color: rgba(255, 255, 255, 0.9);
                text-decoration: none;
                transition: color 0.3s ease;
            }

                .breadcrumb a:hover {
                    color: #fff;
                }

        .hero-title {
            font-size: 3.5rem;
            font-weight: 800;
            color: #667eea;
            margin-bottom: 15px;
            text-shadow: 0 4px 20px rgba(0, 0, 0, 0.3);
            animation: slideInUp 0.8s ease-out;
        }

        .hero-subtitle {

            font-size: 1.3rem;
            color: black;
            margin-bottom: 30px;
            animation: slideInUp 0.8s ease-out 0.2s both;
        }

        .hero-meta {
            display: flex;
            gap: 30px;
            flex-wrap: wrap;
            margin-bottom: 40px;
            animation: slideInUp 0.8s ease-out 0.4s both;
        }

        .meta-item {
            display: flex;
            align-items: center;
            gap: 8px;
            font-weight: 500;
            color:black;
        }

            .meta-item i {
                color: #fbbf24;
            }

        .container {
            max-width: 1200px;
            margin: -60px auto 40px;
            padding: 0 30px;
            position: relative;
            z-index: 2;
        }

        .main-content {
            background: #fff;
            border-radius: 20px;
            box-shadow: 0 25px 60px rgba(0, 0, 0, 0.15);
            overflow: hidden;
            backdrop-filter: blur(10px);
        }

        .media-gallery {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 0;
            min-height: 400px;
        }

        .media-item {
            position: relative;
            overflow: hidden;
            background: linear-gradient(135deg, #f8fafc, #e2e8f0);
        }

            .media-item img,
            .media-item video {
                width: 100%;
                height: 100%;
                object-fit: cover;
                transition: transform 0.6s cubic-bezier(0.4, 0, 0.2, 1);
            }

            .media-item:hover img,
            .media-item:hover video {
                transform: scale(1.08);
            }

        .media-overlay {
            position: absolute;
            top: 20px;
            left: 20px;
            background: rgba(0, 0, 0, 0.7);
            color: #fff;
            padding: 8px 16px;
            border-radius: 20px;
            font-size: 0.85rem;
            font-weight: 600;
            backdrop-filter: blur(10px);
        }

        .content-section {
            padding: 50px;
        }

        .price-enrollment {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 40px;
            padding: 30px;
            background: linear-gradient(135deg, #f8fafc, #edf2f7);
            border-radius: 16px;
            border: 1px solid rgba(102, 126, 234, 0.1);
        }

        .price-info {
            display: flex;
            align-items: center;
            gap: 15px;
        }

        .price-tag {
            font-size: 2.5rem;
            font-weight: 800;
            color: #667eea;
            text-shadow: 0 2px 4px rgba(102, 126, 234, 0.3);
        }

        .price-note {
            color: #64748b;
            font-size: 0.9rem;
        }

        .enroll-button {
            background: linear-gradient(135deg, #667eea, #764ba2);
            color: #fff;
            padding: 18px 36px;
            font-size: 1.1rem;
            font-weight: 700;
            border: none;
            border-radius: 50px;
            box-shadow: 0 10px 30px rgba(102, 126, 234, 0.4);
            cursor: pointer;
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
            position: relative;
            overflow: hidden;
        }

            .enroll-button::before {
                content: '';
                position: absolute;
                top: 0;
                left: -100%;
                width: 100%;
                height: 100%;
                background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
                transition: left 0.6s;
            }

            .enroll-button:hover::before {
                left: 100%;
            }

            .enroll-button:hover {
                transform: translateY(-3px) scale(1.05);
                box-shadow: 0 15px 40px rgba(102, 126, 234, 0.5);
            }

            .enroll-button:active {
                transform: translateY(-1px) scale(1.02);
            }

        .section {
            margin-bottom: 40px;
            animation: fadeInUp 0.6s ease-out;
        }

        .section-title {
            font-size: 1.5rem;
            font-weight: 700;
            color: #1a202c;
            margin-bottom: 20px;
            display: flex;
            align-items: center;
            gap: 12px;
        }

            .section-title i {
                color: #667eea;
                font-size: 1.2rem;
            }

        .section-content {
            background: #f8fafc;
            padding: 25px;
            border-radius: 12px;
            border-left: 4px solid #667eea;
            font-size: 1rem;
            line-height: 1.7;
            color: #4a5568;
        }

        .details-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 25px;
            margin-bottom: 40px;
        }

        .detail-card {
            background: linear-gradient(135deg, #fff, #f8fafc);
            padding: 25px;
            border-radius: 16px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
            border: 1px solid rgba(102, 126, 234, 0.1);
            transition: all 0.3s ease;
        }

            .detail-card:hover {
                transform: translateY(-5px);
                box-shadow: 0 10px 30px rgba(0, 0, 0, 0.15);
            }

        .detail-label {
            font-size: 0.85rem;
            color: #667eea;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            margin-bottom: 8px;
        }

        .detail-value {
            font-size: 1.1rem;
            font-weight: 600;
            color: #1a202c;
        }

        .floating-elements {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            pointer-events: none;
            z-index: -1;
        }

        .floating-circle {
            position: absolute;
            border-radius: 50%;
            background: linear-gradient(135deg, rgba(102, 126, 234, 0.1), rgba(118, 75, 162, 0.1));
            animation: float 6s ease-in-out infinite;
        }

            .floating-circle:nth-child(1) {
                width: 80px;
                height: 80px;
                top: 20%;
                left: 10%;
                animation-delay: 0s;
            }

            .floating-circle:nth-child(2) {
                width: 120px;
                height: 120px;
                top: 60%;
                right: 15%;
                animation-delay: 2s;
            }

            .floating-circle:nth-child(3) {
                width: 60px;
                height: 60px;
                bottom: 20%;
                left: 20%;
                animation-delay: 4s;
            }

        slideInUp {
            from

        {
            opacity: 0;
            transform: translateY(30px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }

        }

         fadeInUp {
            from

        {
            opacity: 0;
            transform: translateY(20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }

        }

        float {
            0%, 100%

        {
            transform: translateY(0px) rotate(0deg);
        }

        50% {
            transform: translateY(-20px) rotate(180deg);
        }

        }

         (max-width: 768px) {
            .hero-title

        {
            font-size: 2.5rem;
        }

        .hero-meta {
            flex-direction: column;
            gap: 15px;
        }

        .media-gallery {
            grid-template-columns: 1fr;
        }

        .content-section {
            padding: 30px 25px;
        }

        .price-enrollment {
            flex-direction: column;
            gap: 20px;
            text-align: center;
        }

        .details-grid {
            grid-template-columns: 1fr;
        }

        .container {
            margin: -40px auto 20px;
            padding: 0 20px;
        }

        }

         (max-width: 480px) {
            .hero-content

        {
            padding: 0 20px;
        }

        .hero-title {
            font-size: 2rem;
        }

        .content-section {
            padding: 20px 15px;
        }

        }
    </style>
</head>
<body>
    <div class="floating-elements">
        <div class="floating-circle"></div>
        <div class="floating-circle"></div>
        <div class="floating-circle"></div>
    </div>

    <section class="hero-section">
        <div class="hero-content">
            

            <h1 class="hero-title">@Model.CourseTitle</h1>
            <p class="hero-subtitle">Master new skills with expert instruction and hands-on learning</p>

            <div class="hero-meta">
                <div class="meta-item">
                    <i class="fas fa-user"></i>
                    <span>@Model.Instructor</span>
                </div>
                <div class="meta-item">
                    <i class="fas fa-clock"></i>
                    <span>@Model.Hours hours</span>
                </div>
                <div class="meta-item">
                    <i class="fas fa-tag"></i>
                    <span>@Model.Category</span>
