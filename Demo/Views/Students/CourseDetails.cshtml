    </section>

    <div class="container">
        <div class="main-content">
            @* @if (!string.IsNullOrEmpty(Model.ImagePath) || !string.IsNullOrEmpty(Model.VideoPath)) *@
            @* { *@
            @*     <div class="media-gallery"> *@
