@model Demo.Models.Instructor

@{
	// var search = Context.Request.Query.ContainsKey("searchCourse")
	// 	? Context.Request.Query["searchCourse"].ToString()
	// 	: "";
}

<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>Admin Panel - Add Instructor</title>
	<style>
		* {
			margin: 0;
			padding: 0;
			box-sizing: border-box;
			font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
		}

		:root {
			--primary-color: #4361ee;
			--secondary-color: #3f37c9;
			--accent-color: #4895ef;
			--success-color: #4cc9f0;
			--warning-color: #f72585;
			--text-color: #212529;
			--light-gray: #f8f9fa;
			--medium-gray: #e9ecef;
			--dark-gray: #6c757d;
		}

		body {
			background-color: #f5f5f5;
			min-height: 100vh;
			display: flex;
			width: 100%;
		}

		.sidebar {
			width: 250px;
			background-color: #2b2d42;
			color: white;
			padding: 20px 0;
			height: 100vh;
			position: fixed;
		}

		.logo {
			padding: 0 20px 20px;
			font-size: 24px;
			font-weight: bold;
			border-bottom: 1px solid rgba(255, 255, 255, 0.1);
			margin-bottom: 20px;
			display: flex;
			align-items: center;
		}

		.logo-icon {
			margin-right: 10px;
			background-color: var(--primary-color);
			width: 32px;
			height: 32px;
			border-radius: 8px;
			display: flex;
			align-items: center;
			justify-content: center;
			font-weight: bold;
		}

		.menu {
			list-style: none;
		}

			.menu li {
				padding: 10px 20px;
				margin: 5px 0;
				cursor: pointer;
				transition: all 0.3s;
				border-left: 4px solid transparent;
			}

				.menu li:hover {
					background-color: rgba(255, 255, 255, 0.1);
				}

				.menu li.active {
					background-color: rgba(67, 97, 238, 0.3);
					border-left: 4px solid var(--primary-color);
				}

		.menu-item {
			display: flex;
			align-items: center;
		}

		.menu-icon {
			margin-right: 10px;
			width: 20px;
			text-align: center;
		}

		.main-content {
			flex: 1;
			margin-left: 250px;
			padding: 20px;
			width: calc(100% - 250px);
		}

		.header {
			display: flex;
			justify-content: space-between;
			align-items: center;
			margin-bottom: 30px;
			padding-bottom: 10px;
			border-bottom: 1px solid var(--medium-gray);
		}

		.page-title {
			font-size: 24px;
			font-weight: bold;
			color: var(--text-color);
		}

		.user-profile {
			display: flex;
			align-items: center;
		}

		.user-avatar {
			width: 40px;
			height: 40px;
			border-radius: 50%;
			background-color: var(--primary-color);
			color: white;
			display: flex;
			align-items: center;
			justify-content: center;
			font-weight: bold;
			margin-right: 10px;
		}

		.user-info {
			display: flex;
			flex-direction: column;
		}

		.user-name {
			font-weight: bold;
			color: var(--text-color);
		}

		.user-role {
			font-size: 12px;
			color: var(--dark-gray);
		}

		.form-container {
			background-color: white;
			border-radius: 12px;
			box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
			padding: 0;
			overflow: hidden;
		}

		.form-header {
			background: linear-gradient(135deg, var(--primary-color) 0%, var(--secondary-color) 100%);
			color: white;
			padding: 25px 30px;
			margin-bottom: 0;
		}

			.form-header h2 {
				font-size: 1.8em;
				margin-bottom: 8px;
				font-weight: 600;
			}

			.form-header p {
				font-size: 1em;
				opacity: 0.9;
				margin: 0;
			}

		.form-content {
			padding: 30px;
		}

		.form-section {
			margin-bottom: 35px;
		}

		.section-title {
			font-size: 1.3em;
			color: var(--text-color);
			margin-bottom: 20px;
			padding-bottom: 8px;
			border-bottom: 2px solid var(--primary-color);
			position: relative;
			font-weight: 600;
		}

			.section-title::before {
				content: '';
				position: absolute;
				bottom: -2px;
				left: 0;
				width: 40px;
				height: 2px;
				background: var(--secondary-color);
			}

		.form-row {
			display: flex;
			gap: 20px;
			margin-bottom: 20px;
			flex-wrap: wrap;
		}

		.form-group {
			flex: 1;
			min-width: 250px;
		}

			.form-group.full-width {
				flex: 100%;
			}

		label {
			display: block;
			margin-bottom: 6px;
			font-weight: 600;
			color: var(--text-color);
			font-size: 0.9em;
		}

		.required {
			color: var(--warning-color);
		}

		input[type="text"],
		input[type="email"],
		input[type="tel"],
		input[type="date"],
		input[type="number"],
		input[type="url"],
		select,
		textarea {
			width: 100%;
			padding: 12px 15px;
			border: 2px solid var(--medium-gray);
			border-radius: 8px;
			font-size: 0.95em;
			transition: all 0.3s ease;
			background: var(--light-gray);
		}

			input[type="text"]:focus,
			input[type="email"]:focus,
			input[type="tel"]:focus,
			input[type="date"]:focus,
			input[type="number"]:focus,
			input[type="url"]:focus,
			select:focus,
			textarea:focus {
				outline: none;
				border-color: var(--primary-color);
				background: white;
				box-shadow: 0 0 0 3px rgba(67, 97, 238, 0.1);
				transform: translateY(-1px);
			}

		textarea {
			resize: vertical;
			min-height: 90px;
		}

		select {
			cursor: pointer;
		}

		.checkbox-group {
			display: flex;
			flex-wrap: wrap;
			gap: 15px;
			margin-top: 8px;
		}

		.checkbox-item {
			display: flex;
			align-items: center;
			gap: 8px;
		}

		input[type="checkbox"] {
			width: 18px;
			height: 18px;
			accent-color: var(--primary-color);
			cursor: pointer;
		}

		.checkbox-item label {
			margin-bottom: 0;
			font-weight: normal;
			cursor: pointer;
		}

		.radio-group {
			display: flex;
			gap: 20px;
			margin-top: 8px;
			flex-wrap: wrap;
		}

		.radio-item {
			display: flex;
			align-items: center;
			gap: 8px;
		}

		input[type="radio"] {
			width: 18px;
			height: 18px;
			accent-color: var(--primary-color);
			cursor: pointer;
		}

		.radio-item label {
			margin-bottom: 0;
			font-weight: normal;
			cursor: pointer;
		}

		.button-group {
			display: flex;
			gap: 15px;
			justify-content: flex-end;
			margin-top: 30px;
			padding-top: 20px;
			border-top: 1px solid var(--medium-gray);
		}

		.btn {
			padding: 12px 25px;
			border: none;
			border-radius: 8px;
			font-size: 1em;
			font-weight: 600;
			cursor: pointer;
			transition: all 0.3s ease;
			min-width: 120px;
			text-decoration: none;
			display: inline-block;
			text-align: center;
		}

		.btn-primary {
			background: linear-gradient(135deg, var(--primary-color) 0%, var(--secondary-color) 100%);
			color: white;
		}

			.btn-primary:hover {
				transform: translateY(-2px);
				box-shadow: 0 8px 20px rgba(67, 97, 238, 0.3);
			}

		.btn-secondary {
			background: var(--light-gray);
			color: var(--text-color);
			border: 2px solid var(--medium-gray);
		}

			.btn-secondary:hover {
				background: var(--medium-gray);
				border-color: var(--dark-gray);
			}

		.btn-back {
			background: var(--dark-gray);
			color: white;
		}

			.btn-back:hover {
				background: #5a6268;
			}

		.help-text {
			font-size: 0.8em;
			color: var(--dark-gray);
			margin-top: 4px;
			font-style: italic;
		}

		.file-upload {
			position: relative;
			display: inline-block;
			width: 100%;
		}

		input[type="file"] {
			position: absolute;
			opacity: 0;
			width: 100%;
			height: 100%;
			cursor: pointer;
		}

		.file-upload-label {
			display: block;
			padding: 12px 15px;
			background: var(--light-gray);
			border: 2px dashed var(--medium-gray);
			border-radius: 8px;
			text-align: center;
			cursor: pointer;
			transition: all 0.3s ease;
		}

		.file-upload:hover .file-upload-label {
			border-color: var(--primary-color);
			background: rgba(67, 97, 238, 0.05);
		}

		.navigation-header {
			display: flex;
			justify-content: space-between;
			align-items: center;
			margin-bottom: 20px;
		}

		(max-width: 768px) {
			.main-content

		{
			margin-left: 0;
			width: 100%;
		}

		.sidebar {
			display: none;
		}

		.form-content {
			padding: 20px;
		}

		.form-row {
			flex-direction: column;
			gap: 0;
		}

		.form-group {
			min-width: 100%;
		}

		.button-group {
			flex-direction: column;
			align-items: stretch;
		}

		.btn {
			width: 100%;
		}

		}
	</style>
</head>
<body>
	<div class="sidebar">
		<div class="logo">
			<div class="logo-icon">A</div>
			<span>Admin Panel</span>
		</div>
		<ul class="menu">
			<li>
				<a href="/Courses/Dashboard" class="menu-link" style="text-decoration:none;color:inherit;">
					<div class="menu-item">
						<span class="menu-icon">📊</span>
						<span>Dashboard</span>
					</div>
				</a>
			</li>
			<li>
				<a href="/Students/AddCourse" class="menu-link" style="text-decoration:none;color:inherit;">
					<div class="menu-item">
						<span class="menu-icon">📚</span>
						<span>Courses</span>
					</div>
				</a>
			</li>
			<li>
				<a href="/Students/Index" class="menu-link" style="text-decoration:none;color:inherit;">
					<div class="menu-item">
						<span class="menu-icon">👥</span>
						<span>Students</span>
					</div>
				</a>
			</li>
			<li class="active">
				<a href="/Courses/Instructor" class="menu-link" style="text-decoration:none;color:inherit;">
					<div class="menu-item">
						<span class="menu-icon">👨‍🏫</span>
						<span>Instructors</span>
					</div>
				</a>
			</li>
			<li>
				<div class="menu-item">
					<span class="menu-icon">💰</span>
					<span>Payments</span>
				</div>
			</li>
			<li>
				<div class="menu-item">
					<span class="menu-icon">📜</span>
					<span>Reports</span>
				</div>
			</li>
			<li>
				<div class="menu-item">
					<span class="menu-icon">⚙️</span>
					<span>Settings</span>
				</div>
			</li>
		</ul>
	</div>

	<div class="main-content">
		<div class="header">
			<div class="page-title">Add New Instructor</div>
			<div class="user-profile">
				<div class="user-avatar">JD</div>
				<div class="user-info">
					<div class="user-name">John Doe</div>
					<div class="user-role">Administrator</div>
				</div>
			</div>
		</div>

		

		<div class="form-container">
			<div class="form-header">
				<h2>Instructor Registration Form</h2>
				<p>Please fill in all the required information to add a new instructor to the system</p>
			</div>

			<div class="form-content">
				<form id="instructorForm" asp-controller="Instructors" asp-action="Add" method="POST" enctype="multipart/form-data">
					@Html.AntiForgeryToken()

					<!-- Personal Information Section -->
					<div class="form-section">
						<h3 class="section-title">Personal Information</h3>

						<div class="form-row">
							<div class="form-group">
								<label for="firstName" asp-for="FirstName" >First Name <span class=" required">*</span></label>
								<input type="text" id="firstName" name="firstName" required>
							</div>
							<div class="form-group">
								<label for="lastName" asp-for="LastName">Last Name <span class="required">*</span></label>
								<input type="text" id="lastName" name="lastName" required>
							</div>
						</div>

						<div class="form-row">
							<div class="form-group">
								<label for="email" asp-for="Email">Email Address <span class="required">*</span></label>
								<input type="email" id="email" name="email" required>
							</div>
							<div class="form-group">
								<label for="phone" asp-for="Phone">Phone Number <span class="required">*</span></label>
								<input type="tel" id="phone" name="phone" required>
							</div>
						</div>

						<div class="form-row">
							<div class="form-group">
								<label for="dateOfBirth" asp-for="Birth">Date of Birth</label>
								<input type="date" id="dateOfBirth" name="dateOfBirth">
							</div>
							<div class="form-group">
								<label for="gender" asp-for="Gender">Gender</label>
								<select id="gender" name="gender">
									<option value="">Select Gender</option>
									<option value="male">Male</option>
									<option value="female">Female</option>
									<option value="other">Other</option>
									<option value="prefer-not-to-say">Prefer not to say</option>
								</select>
							</div>
						</div>

						<div class="form-group full-width">
							<label for="address" asp-for="Address">Address</label>
							<textarea id="address" name="address" placeholder="Enter complete address"></textarea>
						</div>
					</div>

					<!-- Professional Information Section -->
					<div class="form-section">
						<h3 class="section-title">Professional Information</h3>

						<div class="form-row">
							
							<div class="form-group">
								<label for="department" asp-for="Department">Department <span class="required">*</span></label>
								<select id="department" name="department" required>
									<option value="">Select Department</option>
									<option value="computer-science">Computer Science</option>
									<option value="mathematics">Mathematics</option>
									<option value="physics">Physics</option>
									<option value="chemistry">Chemistry</option>
									<option value="biology">Biology</option>
									<option value="english">English</option>
									<option value="history">History</option>
									<option value="business">Business</option>
									<option value="engineering">Engineering</option>
									<option value="other">Other</option>
								</select>
							</div>

							<div class="form-group">
								<label for="position" asp-for="Position">Position <span class="required">*</span></label>
								<select id="position" name="position" required>
									<option value="">Select Position</option>
									<option value="professor">Professor</option>
									<option value="associate-professor">Associate Professor</option>
									<option value="assistant-professor">Assistant Professor</option>
									<option value="lecturer">Lecturer</option>
									<option value="instructor">Instructor</option>
									<option value="teaching-assistant">Teaching Assistant</option>
								</select>
							</div>
						</div>

						<div class="form-row">
							
							<div class="form-group">
								<label for="experience" asp-for="Experience">Years of Experience</label>
								<input type="number" id="experience" name="experience" min="0" max="50">
							</div>
						

						
							<div class="form-group">
								<label for="joinDate" asp-for="JoinDate">Join Date <span class="required">*</span></label>
								<input type="date" id="joinDate" name="joinDate" required>
							</div>
							
						</div>

						<div class="form-group full-width">
							<label for="specialization" asp-for="Specialization">Area of Specialization</label>
							<div class="checkbox-group">
								<div class="checkbox-item">
									<input type="checkbox" id="programming" name="specialization[]" value="programming">
									<label for="programming">Programming</label>
								</div>
								<div class="checkbox-item">
									<input type="checkbox" id="database" name="specialization[]" value="database">
									<label for="database">Database Management</label>
								</div>
								<div class="checkbox-item">
									<input type="checkbox" id="networking" name="specialization[]" value="networking">
									<label for="networking">Networking</label>
								</div>
								<div class="checkbox-item">
									<input type="checkbox" id="ai" name="specialization[]" value="ai">
									<label for="ai">Artificial Intelligence</label>
								</div>
								<div class="checkbox-item">
									<input type="checkbox" id="web-dev" name="specialization[]" value="web-development">
									<label for="web-dev">Web Development</label>
								</div>
								<div class="checkbox-item">
									<input type="checkbox" id="mobile-dev" name="specialization[]" value="mobile-development">
									<label for="mobile-dev">Mobile Development</label>
								</div>
							</div>
						</div>
					</div>

					<!-- Educational Background Section -->
					<div class="form-section">
						<h3 class="section-title">Educational Background</h3>

						<div class="form-row">
							<div class="form-group">
								<label for="highestDegree" asp-for="HighestDegree">Highest Degree <span class="required">*</span></label>
								<select id="highestDegree" name="highestDegree" required>
									<option value="">Select Degree</option>
									<option value="bachelors">Bachelor's Degree</option>
									<option value="masters">Master's Degree</option>
									<option value="phd">Ph.D.</option>
									<option value="postdoc">Post-Doctorate</option>
								</select>
							</div>
							<div class="form-group">
								<label for="university" asp-for="University">University/Institution</label>
								<input type="text" id="university" name="university">
							</div>
						</div>

						<div class="form-row">
							<div class="form-group">
								<label for="graduationYear" asp-for="GraduationYear">Graduation Year</label>
								<input type="number" id="graduationYear" name="graduationYear" min="1950" max="2025">
							</div>
							<div class="form-group">
								<label for="gpa" asp-for="Grade">GPA/Grade</label>
								<input type="text" id="gpa" name="gpa" placeholder="e.g., 3.8/4.0 or First Class">
							</div>
						</div>

						
					</div>

					<!-- Additional Information Section -->
					<div class="form-section">
						<h3 class="section-title">Additional Information</h3>

						

						<div class="form-group full-width">
							<label for="availability" asp-for="Availability">Teaching Availability</label>
							<div class="radio-group">
								<div class="radio-item">
									<input type="radio" id="full-time" name="availability" value="full-time">
									<label for="full-time">Full-time</label>
								</div>
								<div class="radio-item">
									<input type="radio" id="part-time" name="availability" value="part-time">
									<label for="part-time">Part-time</label>
								</div>
								<div class="radio-item">
									<input type="radio" id="flexible" name="availability" value="flexible">
									<label for="flexible">Flexible</label>
								</div>
							</div>
						</div>

						<div class="form-group full-width">
							<label for="profilePhoto" asp-for="Profile">Profile Photo</label>
							<div class="file-upload">
								<input type="file" id="profilePhoto" name="profilePhoto" accept="image/*">
								<label for="profilePhoto"  class="file-upload-label">
									Click to upload photo or drag and drop
								</label>
							</div>
							<div class="help-text">Accepted formats: JPG, PNG, GIF (Max size: 5MB)</div>
						</div>

						
					</div>

					<!-- Submit Buttons -->
					<div class="button-group">
						<button type="submit" class="btn btn-primary">Add Instructor</button>
						<button type="reset" class="btn btn-secondary">Clear Form</button>
					</div>
				</form>
			</div>
		</div>
	</div>

	<script>
		// Form validation and submission handling
		document.getElementById('instructorForm').addEventListener('submit', function(e) {
			e.preventDefault();

			// Basic form validation
			const requiredFields = document.querySelectorAll('[required]');
			let isValid = true;

			requiredFields.forEach(field => {
				if (!field.value.trim()) {
					field.style.borderColor = '#f72585';
					isValid = false;
				} else {
					field.style.borderColor = '#e9ecef';
				}
			});

			
		});

		// File upload preview
		document.getElementById('profilePhoto').addEventListener('change', function(e) {
			const file = e.target.files[0];
			const label = document.querySelector('.file-upload-label');

			if (file) {
				label.textContent = `Selected: ${file.name}`;
				label.style.color = '#4361ee';
			} else {
				label.textContent = 'Click to upload photo or drag and drop';
				label.style.color = '#212529';
			}
		});

		// Dynamic department handling
		document.getElementById('department').addEventListener('change', function() {
			if (this.value === 'other') {
				const customDept = prompt('Please specify the department:');
				if (customDept) {
					const option = new Option(customDept, customDept, true, true);
					this.appendChild(option);
				}
			}
		});

		// Auto-generate employee ID suggestion
		document.getElementById('firstName').addEventListener('blur', function() {
			const firstName = this.value;
